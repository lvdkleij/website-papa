---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style lang="scss" is:global>
  @use "../../node_modules/utopia-core-scss/src/utopia" as utopia;
  @import "@fontsource-variable/inter";
  :root {
    --color_body: #425466;
    --color_headline: #0a2540;
    --transparent: transparent;
    --white: #fff;
    --color_link: #635bff;

    @include utopia.generateTypeScale(
      (
        "minWidth": 0,
        "maxWidth": 1440,
        "minFontSize": 17,
        "maxFontSize": 18,
        "minTypeScale": 1.1,
        "maxTypeScale": 1.18,
        "positiveSteps": 9,
        "negativeSteps": 2,
        "prefix": "step-",
        "relativeTo": "container",
      )
    );

    @include utopia.generateSpaceScale(
      (
        "minWidth": 320,
        "maxWidth": 1240,
        "minSize": 18,
        "maxSize": 20,
        "positiveSteps": (
          1.5,
          2,
          3,
          4,
          6,
          10,
        ),
        "negativeSteps": (
          0.75,
          0.5,
          0.25,
          0.125,
        ),
        "customSizes": (
          "s-l",
        ),
        "prefix": "space-",
        "relativeTo": "container",
      )
    );

    --grid-max-width: 82rem;
    --grid-gutter: clamp(2rem, 0.8467rem + 2.3913vw, 2.5rem);

    --grid-columns: 12;
  }

  * {
    font-family: inherit;
  }

  html {
    font-family: "Inter Variable", sans-serif;
  }

  html,
  body {
    margin: 0;
  }

  .heading-9 {
    font-size: var(--step-9);
    line-height: 1.3;
    font-weight: 800;
    color: var(--color_headline);
  }

  .heading-6 {
    font-size: var(--step-6);
    line-height: 1.3;
    font-weight: 800;
    color: var(--color_headline);
  }

  .font-9 {
    font-size: var(--step-9);
    line-height: 1.3;
    font-weight: 800;
    color: var(--color_headline);
  }

  .font-7 {
    font-size: var(--step-7);
    line-height: 1.3;
    font-weight: 600;
    color: var(--color_headline);
  }

  .font-6 {
    font-size: var(--step-6);
    line-height: 1.25;
    font-weight: 800;
    color: var(--color_headline);
  }

  .font-5 {
    font-size: var(--step-5);
    line-height: 1.3;
    font-weight: 800;
    color: var(--color_headline);
  }

  .font-4 {
    font-size: var(--step-4);
    line-height: 1.1;
    color: var(--color_headline);
  }

  .font-3 {
    font-size: var(--step-3);
    line-height: 1.4;
    color: var(--color_headline);
  }

  .font-2 {
    font-size: var(--step-2);
    line-height: 1.4;
    color: var(--color_headline);
  }

  .font-1 {
    font-size: var(--step-1);
    line-height: 1.55;
    color: var(--color_headline);
  }

  .font-0 {
    font-size: var(--step-0);
    line-height: 1.55;
    color: var(--color_body);
  }

  .font--1 {
    font-size: var(--step--1);
    line-height: 1.5;
    color: var(--color_body);
  }

  .text_link {
    font-size: var(--step--1);
    line-height: 1.5;
    color: var(--color_link);
    font-weight: 600;
  }

  .font--2 {
    font-size: var(--step--2);
    line-height: 1.5;
    color: var(--color_body);
  }

  .u-grid {
    display: grid;
    gap: var(--grid-gutter);
  }
</style>
