---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style lang="scss" is:global>
  @use "../../node_modules/utopia-core-scss/src/utopia" as utopia;
  @import "@fontsource-variable/inter";
  @import "@fontsource-variable/cabin";
  @import "@fontsource-variable/inter";
  @import "@fontsource-variable/manrope";
  @import "@fontsource-variable/mulish";
  @import "@fontsource-variable/public-sans";
  @import "@fontsource-variable/rubik";
  @import "@fontsource-variable/archivo";
  @import "@fontsource-variable/space-grotesk";
  @import "@fontsource-variable/plus-jakarta-sans";

  :root {
    --headlineColor: #0a2540;
    --bodyColor: #425466;
    --linkColor: #635bff;
    --excelGreenColor: #0f7c41;
    --transparent: transparent;
    --white: #fff;
    --fontFamily: "Plus Jakarta Sans Variable", sans-serif;

    --font-heading: "Inter Variable", sans-serif;
    --font-body: "Manrope Variable", sans-serif;
    --font-accent: "Plus Jakarta Sans Variable", sans-serif;

    /* @link https://utopia.fyi/type/calculator?c=320,18,1.2,1240,20,1.25,5,2,&s=0.75|0.5|0.25,1.5|2|3|4|6,s-l&g=s,l,xl,12 */

    --font-xs: 0.75rem; // 12px
    --font-sm: calc(var(--font-xs) * 1.3333); // ~16px (0.75rem * 1.3333)
    --font-md: calc(var(--font-sm) * 1.25); // ~20px (1rem * 1.25)
    --font-lg: calc(var(--font-md) * 1.25); // ~25px (1.25rem * 1.25)
    --font-xl: calc(var(--font-lg) * 1.6); // ~31.25px (1.5625rem * 1.25)

    --line-height-xs: 1.25;
    --line-height-sm: 1.5;
    --line-height-md: 1.3;
    --line-height-lg: 1.2;
    --line-height-xl: 1.2;

    @include utopia.generateSpaceScale(
      (
        "minWidth": 320,
        "maxWidth": 1240,
        "minSize": 18,
        "maxSize": 20,
        "positiveSteps": (
          1.5,
          2,
          3,
          4,
          6,
          10,
        ),
        "negativeSteps": (
          0.75,
          0.5,
          0.25,
          0.125,
          0.08,
        ),
        "customSizes": (
          "s-l",
        ),
        "prefix": "space-",
        "relativeTo": "container",
      )
    );

    --grid-max-width: 84rem;
    --grid-gutter: clamp(2rem, 0.8467rem + 2.3913vw, 2.5rem);

    --grid-columns: 12;
  }

  html {
    overscroll-behavior: none;
    font-family: "Manrope Variable", sans-serif;
  }

  button,
  a {
    all: unset;
    display: inline-block;
  }

  .atlas-heading {
    &-xl {
      font-size: var(--font-xl);
      line-height: var(--line-height-xl);
      font-family: var(--font-heading);
      font-weight: 600;
    }

    &-lg {
      font-size: var(--font-lg);
      line-height: var(--line-height-lg);
      font-family: var(--font-heading);
      font-weight: 600;
    }

    &-md {
      font-size: var(--font-md);
      line-height: var(--line-height-md);
      font-family: var(--font-heading);
      font-weight: 600;
    }
    &-sm {
      font-size: var(--font-sm);
      line-height: var(--line-height-sm);
      font-family: var(--font-heading);
      font-weight: 700;
    }
  }

  .atlas-text {
    &-xs {
      font-size: var(--font-xs);
      line-height: var(--line-height-xs);
      font-family: var(--font-body);
    }

    &-sm {
      font-size: var(--font-sm);
      line-height: var(--line-height-sm);
      font-family: var(--font-body);
    }

    &-md {
      font-size: var(--font-md);
      line-height: var(--line-height-md);
      font-family: var(--font-body);
    }
  }

  h1,
  a,
  h2,
  h3,
  h4,
  h5,
  h6 {
    color: #191919;
    font-family: "Inter Variable", sans-serif !important;
  }

  html,
  body {
    margin: 0;
    overflow-x: hidden;
  }

  .text_link {
    font-size: var(--fontSize--1);
    line-height: 1.5;
    color: var(--linkColor);
    font-weight: 600;
  }

  .u-grid {
    display: grid;
    gap: var(--grid-gutter);
  }
</style>
