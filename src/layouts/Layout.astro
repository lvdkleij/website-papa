---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style lang="scss" is:global>
  @use "../../node_modules/utopia-core-scss/src/utopia" as utopia;
  @import "@fontsource-variable/inter";
  :root {
    --color_body: #36394a;
    --color_headline: #0d0d12;

    @include utopia.generateTypeScale(
      (
        "minWidth": 320,
        "maxWidth": 1440,
        "minFontSize": 17,
        "maxFontSize": 20,
        "minTypeScale": 1.19,
        "maxTypeScale": 1.25,
        "positiveSteps": 5,
        "negativeSteps": 2,
        "prefix": "step-",
        "relativeTo": "container",
      )
    );

    @include utopia.generateSpaceScale(
      (
        "minWidth": 320,
        "maxWidth": 1240,
        "minSize": 18,
        "maxSize": 20,
        "positiveSteps": (
          1.5,
          2,
          3,
          4,
          6,
        ),
        "negativeSteps": (
          0.75,
          0.5,
          0.25,
        ),
        "customSizes": (
          "s-l",
        ),
        "prefix": "space-",
        "relativeTo": "container",
      )
    );

    --grid-max-width: 90rem;
    --grid-gutter: var(
      --space-sl,
      clamp(1.125rem, 0.6467rem + 2.3913vw, 2.5rem)
    );
    --grid-columns: 12;
  }

  * {
    font-family: inherit;
  }

  html {
    font-family: "Inter Variable", sans-serif;
  }

  html,
  body {
    margin: 0;
  }

  .font-5 {
    font-size: var(--step-5);
    line-height: 1.1;
    font-weight: 600;
    color: var(--color_headline);
  }

  .font-4 {
    font-size: var(--step-4);
    line-height: 1.1;
    color: var(--color_headline);
  }

  .font-3 {
    font-size: var(--step-3);
    line-height: 1.1;
    color: var(--color_headline);
  }

  .font-2 {
    font-size: var(--step-2);
    line-height: 1.1;
    color: var(--color_headline);
  }

  .font-1 {
    font-size: var(--step-1);
    line-height: 1.1;
    color: var(--color_body);
  }

  .font-0 {
    font-size: var(--step-0);
    line-height: 1.1;
    color: var(--color_body);
  }

  .font--1 {
    font-size: var(--step--1);
    line-height: 1.1;
    color: var(--color_body);
  }

  .font--2 {
    font-size: var(--step--2);
    line-height: 1.1;
    color: var(--color_body);
  }

  .page-section {
    max-width: var(--grid-max-width);
    padding-inline: var(--grid-gutter);
    margin-inline: auto;
  }

  .u-grid {
    display: grid;
    gap: var(--grid-gutter);
  }
</style>
