<svg
  xmlns="http://www.w3.org/2000/svg"
  height="24px"
  viewBox="0 0 960 960"
  width="40px"
  id="menu-icon"
>
  <path d="M120 240v80h720v-80H120Z" class="line1"></path>
  <path d="M120 440v80h720v-80H120Z" class="line2"></path>
  <path d="M120 640v80h720v-80H120Z" class="line3"></path>
  <path d="M120 440v80h720v-80H120Z" class="line4"></path>
</svg>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const menuIcon = document.getElementById("menu-icon") as HTMLElement;

    // Toggle the 'animate' class on click
    menuIcon.addEventListener("click", () => {
      menuIcon.classList.toggle("animate");
    });
  });
</script>

<style>
  :root {
    --transition-duration: 0.3s;
    --transition-delay: 0.2s;
  }

  svg path {
    fill: inherit;
    transition:
      transform var(--transition-duration),
      visibility var(--transition-duration);
    transform-origin: center center;
    transition-delay: var(--transition-delay);
  }

  svg path.line2,
  svg path.line4 {
    transition-delay: 0s;
  }

  .animate .line1 {
    transform: translateY(200px);
    visibility: hidden;
    transition-delay: 0s;
  }

  .animate .line3 {
    transform: translateY(-200px);
    visibility: hidden;
    transition-delay: 0s;
  }

  .animate .line2 {
    transform: rotate(45deg);
    transition-delay: var(--transition-duration);
  }
  .animate .line4 {
    transform: rotate(-45deg);
    transition-delay: var(--transition-duration);
  }
</style>
