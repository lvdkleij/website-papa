---
interface Props {
  title: string;
  body: string;
  class?: string;
}

const { title, body, class: _class } = Astro.props;
---

<div
  class=`shrink-0 w-full max-sm:max-w-[24rem] sm:w-[24rem] md:w-[28rem] lg:w-[32rem] card-shadow bg-white rounded-lg overflow-hidden pt-[--space-2xl] pb-[--space-xl] px-[--space-l] relative`
>
  <div class="absolute top-0 left-0 right-0 h-[0.48rem] bg-green-600"></div>

  <h1 class="font-2 font-semibold mb-[--space-xs]">{title}</h1>
  <p class="font-0 mb-[--space-xs]">
    {body}
  </p>
  <a class="mb-[--space-xs] text_link block">Lees meer</a>
</div>

<style>
  .border-color {
    border-color: #a0a0a054;
  }

  .card-shadow {
    box-shadow:
      0px 8px 16px -8px rgba(0, 0, 0, 0.1),
      0px 13px 27px -12px rgba(50, 50, 93, 0.25);
  }
</style>
