---
import SolutionsDropdown from "./SolutionsDropdown.astro";
import ServicesDropdown from "./ServicesDropdown.astro";
interface Props {
  class?: string;
}

const { class: _class } = Astro.props;
---

<nav class=`${_class} p-[--space-xs] flex items-center`>
  <a href="/">
    <div class="font-1 font-bold mr-[--space-xs]">Logo</div>
  </a>
  <ul class="flex items-center">
    <li>
      <ServicesDropdown />
    </li>
    <li>
      <SolutionsDropdown />
    </li>
    <li>
      <a
        href="./about-me"
        class="py-[--space-2xs] px-[--space-xs] font--1 font-semibold cursor-pointer"
      >
        Over mij
      </a>
    </li>
  </ul>
  <a
    href="./contact"
    class="ml-auto inline-block px-[--space-xs] py-[--space-2xs] border-2 border-solid rounded-lg font-semibold font--1 cursor-pointer !text-[#1DBF73] border-[#1DBF73] hover:bg-[#19A463] hover:!text-white hover:border-[#19A463]"
  >
    Neem contact op
  </a>
</nav>
