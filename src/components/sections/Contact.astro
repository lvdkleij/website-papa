---
import PageSection from "../Layout/PageSection.astro";
import AtlasParagraph from "../text/AtlasParagraph.astro";
---

<PageSection backgroundColor="rgba(0,57,18,1)">
  <div class="pt-[--space-xl] pb-[--space-l]">
    <div
      class="aa flex flex-col items-center w-full py-[--space-m] px-[--space-m]"
    >
      <h2 class="atlas-heading-lg inline-block md:max-w-[60%] text-center">
        Klaar om te groeien?
      </h2>
      <AtlasParagraph
        class="text-center !text-white max-w-[60%] mt-[--space-m]"
      >
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Deleniti vel
        reprehenderit corrupti alias at debitis.
      </AtlasParagraph>
      <a
        href="contact"
        class="bg-green-600 mt-[--space-l] text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700 transition duration-300 cursor-pointer"
      >
        Neem contact op
      </a>
    </div>
  </div>
</PageSection>

<style>
  .aa {
    color: white !important;
  }

  h2 {
    color: white !important;
  }
</style>
